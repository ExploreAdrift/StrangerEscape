    <div class="form-popUp" id="popUp">
        <form action="" class="form-container-popUp">
            <h3>The Safe Opens!</h3>
            <h4>I Found A Plate Of...Well Somehow It's Freshly Made Waffles! </h4>
            <h4>This Could Be Useful If I go DownStairs...</h4>
            <div class="d-flex justify-content-center gap-5 mt-3">
                <button type="button" class="btn btn-danger" onclick="closepopUp()">Close</button>
            </div>
        </form>
    </div>


    @* this is for the bulbs pop up form *@
    <button class="open-bulbs" onclick="openFormBulbs()"></button>
    <div class="form-bulbs" id="form-bulbs">
        <form action="" class="form-container-bulbs">
            <h1>I Should Go Give This To Her In the Basement <br>Im Sure She Will Help.</h1>
            <div class="d-flex justify-content-center gap-5 mt-3">
                <button type="button" class="btn btn-danger cancel" onclick="closeFormBulbs()">Close</button>
            </div>
        </form>
    </div>


    <!-- this goes in the second living room after the lights  -->
    <button class="open-Safe" onclick="openFormBulbs()"></button>
    <div class="form-Safe" id="form-Safe">
        <div class="form-container-Safe">
            <div id="calculator">
                <form asp-controller="Home" asp-action="LivingRoom3" method="get">
                    <div id="display">0</div>
                    <div class="row1">
                        <input type="hidden" name="safecode" id="code">
                        <button type="submit" id="equals">Enter Code</button>
                    </div>
                </form>
                <div class="row1">
                    <button onclick="press(7);">7</button>
                    <button onclick="press(8);">8</button>
                    <button onclick="press(9);">9</button>
                </div>
                <div class="row1">
                    <button onclick="press(4);">4</button>
                    <button onclick="press(5);">5</button>
                    <button onclick="press(6);">6</button>
                </div>
                <div class="row1">
                    <button onclick="press(1);">1</button>
                    <button onclick="press(2);">2</button>
                    <button onclick="press(3);">3</button>
                </div>
                <div class="row1">
                    <button onclick="clr();">C</button>
                    <button onclick="press(0);">0</button>
                </div>

            </div>
            <div class="d-flex justify-content-center mt-3">
                <button type="button" class="btn btn-danger cancel" onclick="closeFormSafe()">Close</button>
            </div>
        </div>
    </div>


    @* this is for the book shelf form *@
    <button class="open-button" onclick="openFormBulbs()"></button>
    <div class="form-popup" id="bookName">
        <form action="" class="form-container">
            <h1>Enter A Title</h1>

            <label for="bookTitle">Title</label>
            <input type="text" name="" id="">
            <button type="button" class="btn cancel" onclick="closeForm()">Close</button>
        </form>
    </div>



    @* this is for the door *@
    <a asp-controller="Home" asp-action="BasementFinal"><button class="basement-door"></button></a>


