                <input type="submit" Value="Try It" class="btn btn-warning">
                @* <button class="btn btn-warning" type="submit">Try It</button> *@
                <button type="button" class="btn btn-danger cancel" onclick="closeFormBulbs()">Close</button>
            </div>
